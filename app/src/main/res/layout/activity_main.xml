<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/profile_View"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/today_cardview"
            android:layout_width="match_parent"
            android:layout_height="220sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            app:cardCornerRadius="11dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:layout_marginEnd="25sp"
                android:layout_gravity="top"
                android:layout_marginTop="5sp">

                <TextView
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:gravity="center"
                    android:text="JDE Julian Date Converter"

                    android:textSize="20sp"
                    android:textStyle="bold" />
                <View
                    android:id="@+id/header_separator"
                    android:background="@color/dark_view"
                    android:layout_width="match_parent"
                    android:layout_below="@id/header"
                    android:layout_height="1sp"/>
                <LinearLayout
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:layout_below="@id/header_separator"
                    android:weightSum="4">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <TextView
                            android:text="@string/today"
                            android:textSize="14sp"
                            android:gravity="left"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/today_tv"
                            android:textSize="16sp"
                            android:textColor="@color/blue_700"
                            android:textStyle="italic"
                            android:gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <TextView
                            android:text="@string/this_month"
                            android:textSize="14sp"

                            android:gravity="left"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/this_month_tv"
                            android:textSize="16sp"
                            android:textColor="@color/blue_700"
                            android:textStyle="italic"
                            android:gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <TextView
                            android:text="Last Month"
                            android:textSize="14sp"
                            android:gravity="left"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/last_month_tv"
                            android:textSize="16sp"
                            android:textColor="@color/blue_700"
                            android:textStyle="italic"
                            android:gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <TextView
                            android:text="@string/from_year_start"
                            android:textSize="14sp"
                            android:gravity="left"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/year_start_tv"
                            android:textSize="16sp"
                            android:textColor="@color/blue_700"
                            android:textStyle="italic"
                            android:gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/jde_to_normal_cardview"
            android:layout_width="match_parent"
            android:layout_height="220sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            app:cardCornerRadius="11dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            android:layout_below="@+id/today_cardview">
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:layout_marginEnd="25sp"
                android:layout_gravity="top"
                android:layout_marginTop="5sp">

                <EditText
                    android:id="@+id/from_jde_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:gravity="center"
                    android:hint="@string/enter_jde_julian_date"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textAlignment="center"
                    android:textColor="@color/blue_700"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/to_normal_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/from_jde_tv"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/orange_900"
                    android:textSize="20sp"
                    android:textStyle="italic" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="220sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            app:cardCornerRadius="11dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            android:layout_below="@+id/jde_to_normal_cardview">
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:layout_marginEnd="25sp"
                android:layout_gravity="top"
                android:layout_marginTop="5sp">

                <EditText
                    android:id="@+id/from_normal_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:hint="@string/pick_a_date"
                    android:inputType="date"
                    android:textAlignment="center"
                    android:textColor="@color/blue_700"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/to_jde_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/from_normal_tv"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/orange_900"
                    android:textSize="20sp"
                    android:textStyle="italic" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>